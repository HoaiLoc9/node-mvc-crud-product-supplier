<%- include('../partials/header') %>
<h3>Edit Supplier</h3>
<form action="/suppliers/<%= supplier._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input name="name" value="<%= supplier.name %>" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Address</label>
    <input name="address" value="<%= supplier.address %>" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Phone</label>
    <input name="phone" value="<%= supplier.phone %>" class="form-control">
  </div>
  <button class="btn btn-success">Update</button>
</form>
<%- include('../partials/footer') %>
