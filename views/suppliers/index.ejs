<%- include('../partials/header') %>
<div class="d-flex justify-content-between mb-3">
  <h3>Suppliers</h3>
  <a class="btn btn-primary" href="/suppliers/new">New Supplier</a>
</div>
<table class="table table-striped">
  <thead><tr><th>Name</th><th>Address</th><th>Phone</th><th>Action</th></tr></thead>
  <tbody>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><a href="/suppliers/<%= s._id %>"><%= s.name %></a></td>
        <td><%= s.address %></td>
        <td><%= s.phone %></td>
        <td>
          <a class="btn btn-sm btn-secondary" href="/suppliers/<%= s._id %>/edit">Edit</a>
          <form style="display:inline" method="POST" action="/suppliers/<%= s._id %>?_method=DELETE">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
