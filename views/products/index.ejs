<%- include('../partials/header') %>
<div class="d-flex justify-content-between mb-3">
  <h3>Products</h3>
  <a class="btn btn-primary" href="/products/new">New Product</a>
</div>
<table class="table table-striped">
  <thead><tr><th>Name</th><th>Price</th><th>Qty</th><th>Supplier</th><th>Action</th></tr></thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.price %></td>
        <td><%= p.quantity %></td>
        <td><%= p.supplier ? p.supplier.name : '' %></td>
        <td>
          <a class="btn btn-sm btn-secondary" href="/products/<%= p._id %>/edit">Edit</a>
          <form style="display:inline" method="POST" action="/products/<%= p._id %>?_method=DELETE">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
